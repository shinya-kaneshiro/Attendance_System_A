<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= 
      form_with(model: @confirmations,
                url: attendance_confirmation_confirmation_update_user_path,
                local: true,
                method: :patch
                ) do |f|
    %>
      <% @users.each do |user| %>
        <% single_user = @confirmations.where(applicant: user.id) %>
        <% unless single_user.blank? %>
          <h1 class="modal-title"><%= "#{user.name}からの1ヶ月分勤怠申請" %></h1>
          <div class="modal-body">
            <table class="table table-bordered table-condensed center table-striped">
              <thead>
                <div class="row">
                  <tr>
                    <th class="col-md-1 table-head">月</th>
                    <th class="col-md-1 table-head">指示者確認㊞</th>
                    <th class="col-md-2 table-head">変更</th>
                    <th class="col-md-2 table-head">勤怠を確認する</th>
                  </tr>
                </div>
              </thead>
              <tbody>
                <% single_user.each do |single| %>
                  <%= f.fields_for 'data[]', single do |fs| %>
                  <tr>
                    <%= fs.hidden_field(:id, value: single.id) %>
                    <td><%= single.application_month %></td>
                    <td><%= fs.collection_select(:status, $status_select, :status, :status, {:include_blank => true}) %></td>
                    <td>
                      <%= fs.check_box :check_box %>
                    </td>
                    <td><%= link_to "確認する", user_path(single.applicant, date: single.application_month, readonly_flag:"1"), target: :_blank %></td>
                  </tr>
                  <br>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      <% end %>
      <%= f.submit "変更を送信する", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>